{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist/client",
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "lib": ["DOM", "ES2020"],
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/client/**/*", "src/shared/**/*"],
    "exclude": ["node_modules"]
}
