{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/types",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "src/index.ts",
        "src/client/types/**/*.ts",
        "src/server/types/**/*.ts",
        "src/shared/**/*.ts"
    ],
    "exclude": ["node_modules", "**/*.test.ts"]
}
