{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist/server",
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "moduleResolution": "node",
        "composite": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": ["src/server/**/*", "src/shared/**/*"],
    "exclude": ["node_modules"]
}
