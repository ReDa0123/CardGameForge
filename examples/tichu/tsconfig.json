{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020", "DOM"],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "cardgameforge/*": ["../../src/*"]
        },
        "composite": true
    },
    "exclude": ["node_modules", "dist"],
    "references": [{ "path": "../.." }]
}
